{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "0.1.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "author": "Plex IMDb Enhancer Contributors",
  "homepage_url": "https://github.com/yourusername/plex-imdb-extension",

  "browser_specific_settings": {
    "gecko": {
      "id": "plex-imdb-enhancer@anthropic.com",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://app.plex.tv/*",
    "http://localhost:32400/*",
    "http://127.0.0.1:32400/*",
    "http://*:32400/*",
    "https://www.omdbapi.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Plex IMDb Enhancer - Settings"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "minimum_chrome_version": "88",

  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://app.plex.tv/*", "http://*:32400/*"]
    }
  ]
}
